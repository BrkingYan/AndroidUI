<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:text="@string/register_label"
        android:textSize="40dp"/>

    <!-- 大框架-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingTop="20dp">
        <!-- 输入新用户名-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name_label"/>
            <EditText
                android:id="@+id/register_userName_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/input_user_name_hint"
                android:ems="8"
                android:digits="@string/username_filter"
                android:layout_marginLeft="25dp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </LinearLayout>

        <!--设置密码-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password_label"/>
            <EditText
                android:id="@+id/register_password_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/input_password_hint"
                android:ems="8"
                android:inputType="textPassword"
                android:layout_marginLeft="25dp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </LinearLayout>

        <!--确认密码-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duplicated_password_label"/>
            <EditText
                android:id="@+id/register_password_again_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/input_password_again_hint"
                android:inputType="textPassword"
                android:ems="8"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </LinearLayout>

        <Button
            android:id="@+id/inner_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inner_register_button" />
    </LinearLayout>

</LinearLayout>